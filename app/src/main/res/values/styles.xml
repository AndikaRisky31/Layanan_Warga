<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="h1Text">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/secondary_color</item>
    </style>
    <style name="CustomButtonStyle">
        <item name="android:background">@drawable/button_preset</item> <!-- Menggunakan sumber daya drawable dengan teks -->
        <item name="android:textSize">20sp</item> <!-- Ukuran teks 16sp -->
        <item name="android:textColor">@color/primary_color</item> <!-- Warna teks hitam -->
        <item name="android:fontFamily">@font/poppins_semibold</item> <!-- Jenis font Poppins -->
    </style>
    <style name="h2text">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/secondary_color</item>
        <item name="android:textSize">27sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="fieldText">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_width">330dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/field_underline</item>
        <item name="android:textColorHint">@color/secondary_color</item>
        <item name="android:textColor">@color/secondary_color</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">15dp</item>
    </style>
    <style name="text">
        <item name="android:textColor">@color/secondary_color</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="pengajuan_card">
        <item name="android:layout_width">313dp</item>
        <item name="android:layout_height">167dp</item>
        <item name="android:radius">14dp</item>
        <item name="android:background">@drawable/card_preset</item>
    </style>
    <style name="pengajuan_judul">
        <item name="android:layout_width">313dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:topLeftRadius">14dp</item>
        <item name="android:topRightRadius">14dp</item>
        <item name="android:background">@color/primary_color</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="pengajuan_subjudul">
        <item name="android:layout_width">313dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:topLeftRadius">14dp</item>
        <item name="android:topRightRadius">14dp</item>
        <item name="android:background">@color/primary_color</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/secondary_color</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="pengajuan_image">
        <item name="android:layout_width">313dp</item>
        <item name="android:layout_height">123dp</item>
        <item name="android:bottomLeftRadius">14dp</item>
        <item name="android:bottomRightRadius">14dp</item>
    </style>
    <style name="H1Text">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="subheadText">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="text1">
        <item name="android:textColor">@color/secondary_color</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- res/values/styles.xml -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- ... other style attributes ... -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/secondary_color</item>
        <item name="colorAccent">@color/Accent</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/white</item>
    </style>
</resources>