<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/secondary_color" /> <!-- Shadow color -->
        </shape>
    </item>

    <!-- Background shape (rounded rectangle) -->
    <item android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_color" /> <!-- Background color (white) -->
        </shape>
    </item>
</layer-list>
