<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lapor.LaporActivity"
    android:background="@color/primary_color">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        tools:layout_editor_absoluteX="3dp"
        android:background="@color/secondary_color"/>

    <TextView
        android:id="@+id/textView3"
        style="@style/H1Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Lapor"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView13"
        style="@style/subheadText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Laporkan Masalahmu Disini!"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageButton
        android:id="@+id/button_back"
        style="@style/CustomButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="332dp"
        android:layout_height="196dp"
        android:layout_marginTop="14dp"
        app:cardCornerRadius="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/primary_color">

        <TextView
            style="@style/text1"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:gravity="center|start"
            android:text="Bukti Laporan"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_ganti"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_gravity="center|end|top"
            android:background="#00000000"
            android:paddingEnd="16dp"
            android:text="Ganti"
            android:textAlignment="textEnd"
            android:textColor="@color/secondary_color"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_lapor"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="bottom"
            android:background="@color/primary_color" />

        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_lokasi"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="14dp"
        app:cardElevation="4dp"
        android:layout_marginTop="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_color">

        <TextView
            style="@style/text1"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:gravity="center|start"
            android:text="Lokasi Laporan"
            android:textColor="@color/black"
            android:textStyle="bold" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/et_lokasi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom|start"
                        android:layout_marginTop="35dp"
                        android:inputType="textMultiLine"
                        android:textColor="@color/black"
                        android:minLines="1"
                        android:maxLines="10" />

                </LinearLayout>
            </ScrollView>
        </FrameLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_jenis"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="14dp"
        app:cardElevation="4dp"
        android:layout_marginTop="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_lokasi">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_color">

        <TextView
            style="@style/text1"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:gravity="center|start"
            android:text="Jenis Laporan"
            android:textColor="@color/black"
            android:textStyle="bold" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/et_jenis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom|start"
                        android:layout_marginTop="35dp"
                        android:inputType="textMultiLine"
                        android:textColor="@color/black"
                        android:minLines="1"
                        android:maxLines="10" />

                </LinearLayout>
            </ScrollView>

        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_desc"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:background="@color/primary_color"
        app:cardCornerRadius="14dp"
        app:cardElevation="4dp"
        android:layout_marginTop="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_jenis">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_color">

        <TextView
            style="@style/text1"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:gravity="center|start"
            android:text="Deskripsi Laporan"
            android:textColor="@color/black"
            android:textStyle="bold" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/et_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom|start"
                        android:layout_marginTop="35dp"
                        android:inputType="textMultiLine"
                        android:textColor="@color/black"
                        android:minLines="1"
                        android:maxLines="10" />

                </LinearLayout>
            </ScrollView>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/button_kirim"
        style="@style/CustomButtonStyle"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:text="Kirim"
        android:layout_marginTop="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_desc" />

</androidx.constraintlayout.widget.ConstraintLayout>