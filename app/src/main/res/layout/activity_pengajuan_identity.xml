<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".layanan.pengajuan.PengajuanIdentityActivity"
    android:background="@color/primary_color">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:background="@color/secondary_color"
        tools:layout_editor_absoluteX="3dp" />

    <TextView
        android:id="@+id/textView3"
        style="@style/H1Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Pengajuan"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/button_back"
        style="@style/CustomButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        style="@style/subheadText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:background="@color/warning_color"
        android:drawableLeft="@drawable/baseline_report_gmailerrorred_24"
        android:text="Mohon Jangan Berikan Data Palsu"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@+id/view"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView5"
        style="@style/text1"
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:layout_marginTop="14dp"
        android:layout_marginStart="24dp"
        android:text="Nama Lengkap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/ly1"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:background="@drawable/card_preset"
        android:padding="4dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"/>


    <TextView
        android:id="@+id/textView6"
        style="@style/text1"
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:layout_marginTop="7dp"
        android:layout_marginStart="24dp"
        android:text="Nomor NIK"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ly1" />

    <EditText
        android:id="@+id/ly2"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:background="@drawable/card_preset"
        android:padding="4dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"/>

    <TextView
        android:id="@+id/textView7"
        style="@style/text1"
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:layout_marginTop="7dp"
        android:layout_marginStart="24dp"
        android:text="Tempat, Tanggal Lahir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ly2" />

    <EditText
        android:id="@+id/ly3"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:background="@drawable/card_preset"
        android:padding="4dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"/>


    <TextView
        android:id="@+id/textView8"
        style="@style/text1"
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:layout_marginTop="7dp"
        android:layout_marginStart="24dp"
        android:text="Agama"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ly3" />

    <EditText
        android:id="@+id/ly4"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:background="@drawable/card_preset"
        android:padding="4dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"/>


    <TextView
        android:id="@+id/textView9"
        style="@style/text1"
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:layout_marginTop="7dp"
        android:layout_marginStart="24dp"
        android:text="Status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ly4" />

    <EditText
        android:id="@+id/ly5"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:background="@drawable/card_preset"
        android:padding="4dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9"/>


    <TextView
        android:id="@+id/textView10"
        style="@style/text1"
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:layout_marginTop="7dp"
        android:layout_marginStart="24dp"
        android:text="Alamat Lengkap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ly5" />

    <EditText
        android:id="@+id/ly6"
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:background="@drawable/card_preset"
        android:padding="4dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10"/>


    <TextView
        android:id="@+id/textView11"
        style="@style/text1"
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:layout_marginTop="7dp"
        android:layout_marginStart="24dp"
        android:text="Jenis Keperluan Surat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ly6" />

    <EditText
        android:id="@+id/ly7"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:background="@drawable/card_preset"
        android:padding="4dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"/>

    <Button
        android:id="@+id/button_next"
        style="@style/CustomButtonStyle"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="44dp"
        android:text="Selanjutnya"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ly7" />
</androidx.constraintlayout.widget.ConstraintLayout>